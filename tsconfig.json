{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/api/*": ["shared/api/*"],
      "@/components/*": ["shared/components/*"],
      "@/config/*": ["shared/config/*"],
      "@/hooks/*": ["shared/hooks/*"],
      "@/utils/*": ["shared/utils/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"]
    },
    "lib": ["DOM", "ES2017"],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "shared/components/hoc/privateRoute.ts"
  ],
  "exclude": ["node_modules"]
}
